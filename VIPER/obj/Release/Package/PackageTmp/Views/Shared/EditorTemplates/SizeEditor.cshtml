@model VIPER.Models.Entities.Size

@(Html.Kendo().DropDownList().Name("Size")
    .OptionLabel("Select...")
    .DataTextField("Name")
    .DataValueField("SizeID")
    .DataSource(source =>
    {
        source.Read(read =>
        {
            read.Action("JSONSize", "Admin")
                .Data("getRepairTypeID");
        })
        .ServerFiltering(true);
    })
    .Enable(false)
    .AutoBind(false)
    .CascadeFrom("RepairType")
)

