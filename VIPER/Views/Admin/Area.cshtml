
@{
    ViewBag.Title = "Area Schedule";
}

<h2>Area Schedule</h2>
<br />

<div id="team-schedule">
    <div id="people">
        @foreach (VIPER.Models.ViewModel.EmployeeViewModel area in @ViewBag.Area)
        {
            <input type="checkbox" id="@area.ID" value="@area.ID"><span style="padding-right: 12px;padding-left: 5px;">@area.Name</span>
        }
    </div>
</div>

@(Html.Kendo().Scheduler<VIPER.Models.ViewModel.CalendarViewModel>()
    .Name("scheduler")
    .Date(DateTime.Today)
    .StartTime(DateTime.Today.AddHours(7.00))
    .Height(600)
    .Views(views =>
    {
        views.DayView();
        views.WorkWeekView();
        views.WeekView();
        views.MonthView(mv => mv.Selected(true));
        views.AgendaView();
        views.TimelineView();
    })
    .Resources(resource =>
    {
        resource.Add(m => m.OwnerID)
            .Title("Owner")
            .DataTextField("Name")
            .DataValueField("ID")
            .DataColorField("Color")
            .BindTo(@ViewBag.Area);
    })
    .DataSource(d => d
        .Model(m =>
        {
            m.Id(f => f.TaskID);
            m.RecurrenceId(f => f.RecurrenceID);
        })
        .Read("ReadAreaSchedule", "Admin")

    )
)


<script type="text/javascript">
    $(function () {
        $("#people :checkbox").change(function (e) {
            var checked = $.map($("#people :checked"), function (checkbox) {
                return parseInt($(checkbox).val());
            });

            var filter = {
                logic: "or",
                filters: $.map(checked, function (value) {
                    return {
                        operator: "eq",
                        field: "OwnerID",
                        value: value
                    };
                })
            };

            var scheduler = $("#scheduler").data("kendoScheduler");

            scheduler.dataSource.filter(filter);
        });
    })
</script>
